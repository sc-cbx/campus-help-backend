<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
      
  <mapper namespace="k.m.demo.mapper.EmailMapper">
  
     <select id="selectByname" parameterType="java.lang.String" resultType="k.m.demo.model.User">
        select * from user
        where
        email=#{email}
        
     </select>
  
  </mapper>