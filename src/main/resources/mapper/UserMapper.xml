<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="k.m.demo.mapper.UserMapper">
<resultMap type="k.m.demo.model.SysUser" id="user_result">
		<id column="u_id" property="UID" javaType="java.lang.Integer" jdbcType="INTEGER"/>
		<result column="username" property="username" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result column="password" property="password" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result column="name" property="name" javaType="java.lang.String" jdbcType="VARCHAR"/>
		<result column="age" property="age" javaType="java.lang.Integer" jdbcType="INTEGER"/>
		<result column="s_id" property="s_id" javaType="java.lang.String" jdbcType="VARCHAR"/>
	</resultMap>
	<select id="selectAllUsers" resultMap="user_result">
		select*from sysuser
	</select>
	
	<!--快递帮拿-->
	<insert id="insertUser" parameterType="k.m.demo.model.cohelpUser">
		insert into cohelpuser
		(chUId,name,telephone,site,courier_name,take_num,take_site,weight)
		values
		(#{chUId},#{name},#{telephone},#{site},#{courier_name},#{take_num},#{take_site},#{weight}) 
	</insert>
	<select id="selectUserByTake_num" parameterType="java.lang.String" resultType="k.m.demo.model.cohelpUser">
		select * from cohelpuser
		where
		chUId = #{chUId}
	</select>
</mapper>